<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CreatePayment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="274dp"
        android:layout_height="709dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountInput"
            android:layout_width="231dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/payment_amount_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.309"
            app:layout_constraintStart_toEndOf="@+id/payment_amount_text"
            app:layout_constraintTop_toBottomOf="@+id/nameInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/categoryInput"
            android:layout_width="231dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:hint="@string/payment_category_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toEndOf="@+id/payment_category_text"
            app:layout_constraintTop_toBottomOf="@+id/endDateInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/intervalInput"
            android:layout_width="225dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:hint="@string/payment_interval_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/payment_interval_text"
            app:layout_constraintTop_toBottomOf="@+id/amountInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/endDateInput"
            android:layout_width="229dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:hint="@string/payment_endDate_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/payment_endDate_text"
            app:layout_constraintTop_toBottomOf="@+id/intervalInput" />

        <TextView
            android:id="@+id/payment_name_text"
            android:layout_width="104dp"
            android:layout_height="51dp"
            android:text="@string/payment_name_text"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payment_amount_text"
            android:layout_width="24dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment_amount_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_name_text" />

        <TextView
            android:id="@+id/payment_interval_text"
            android:layout_width="49dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment_interval_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_amount_text" />

        <TextView
            android:id="@+id/payment_endDate_text"
            android:layout_width="37dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment_endDate_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_interval_text" />

        <TextView
            android:id="@+id/payment_category_text"
            android:layout_width="32dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment_category_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_endDate_text" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameInput"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:hint="@string/payment_name_hint"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/payment_name_text"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/setPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:onClick="setPaymentValues"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>